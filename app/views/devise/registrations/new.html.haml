= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "login-box" }) do |f|
  %h3.page-title Sign Up
  .devise-errors
    = devise_error_messages!
  %div
    = f.text_field :name, class: "form-control top", placeholder: "Name", required: true
  %div
    = f.text_field :username, class: "form-control middle", placeholder: "Username", required: true
  %div
    .col-sm-6.no_padding
      = f.text_field :email, class: "form-control middle", placeholder: "Email", required: true
    .col-sm-6.no_padding
      = select_tag :email_domain, options_for_select(Gitlab.config.corporate_email_domains.map {|e| ["@" + e, e]}),
                           class: "form-control middle",
                           style: "height: 51px;",
                           placeholder: "Email",
                           required: true
  %div
    = f.password_field :password, class: "form-control middle", placeholder: "Password", required: true
  %div
    = f.password_field :password_confirmation, class: "form-control bottom", placeholder: "Confirm password", required: true
  %div
    = f.submit "Sign up", class: "btn-create btn"
  %hr
  %p
    %span.light
      Have an account?
    %strong
      = link_to "Sign in", new_session_path(resource_name)
  %p
    = link_to "Forgot your password?", new_password_path(resource_name)
