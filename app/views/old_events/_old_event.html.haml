- if old_event.proper?
  %div.event-item
    %span.cgray.pull-right
      #{time_ago_in_words(old_event.created_at)} ago.

    = image_tag gravatar_icon(old_event.author_email), class: "avatar s24"

    - if old_event.push?
      = render "old_events/event/push", event: old_event
      .clearfix
    - elsif old_event.note?
      = render "old_events/event/note", event: old_event
    - else
      = render "old_events/event/common", event: old_event

