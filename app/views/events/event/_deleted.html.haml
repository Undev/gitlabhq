= image_tag avatar_icon(event.author.email, 24), class: "avatar s24", alt:''

.event-title
  %span.author_name= link_to_author event
  - if lookup_context.exists?("events/event/deleted/_#{event.source_type.underscore}")
    = render "events/event/deleted/#{event.source_type.underscore}", event: event
  - else
    %span.event_label
      deleted
      = event.source_type.downcase
    %strong
      = event.data['name']
