- case params[:type]
- when NilClass, "project"
  = render "project_results"

- when "group"
  = render "group_results"

- when "team"
  = render "team_results"

- when "user"
  = render "user_results"

- when "merge_request"
  = render "merge_request_results"

- when "issue"
  = render "issue_results"

- when "code"
  = render "code_results"

- when "commits"
  = render "commits_results"

:javascript
  $(".search_results .term").highlight("#{escape_javascript(params[:search])}");
