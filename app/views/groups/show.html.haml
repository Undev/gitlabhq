.dashboard
  .activities.col-md-8.hidden-sm
    = render "events/event_last_push", event: @last_push
    = link_to dashboard_path, class: 'btn btn-tiny' do
      &larr; To dashboard
    &nbsp;
    %span.cgray You will only see events from projects in this group
    %hr
    = render 'shared/event_filter'
    - if @events.any?
      .content_list
    - else
      %p.nothing_here_message Project activity will be displayed here
    .loading.hide
  .side.col-md-4
    %div
      = render "shared/watch_button", current_entity: @group

      %h3.page_title
        = @group.name
      - if @group.description.present?
        .description-block
          = @group.description

      %hr
      %p
      %p Creator: #{link_to @group.owner_name, @group.owner}
      %p Created on: #{@group.created_at.stamp('Aug 22, 2013')}
    %hr

    = render "sidebar"

    .prepend-top-20
      = link_to group_path(@group, { format: :atom, private_token: current_user.private_token }), title: "Feed" do
        %strong
          %i.icon-rss
          News Feed

    %hr
    = render 'shared/promo'
