%li{class: "#{dom_class(domain)} js-toggle-container", id: dom_id(domain)}
  %strong= domain.domain
  %span.cgray= domain.description

  %span.pull-right
    = link_to '#', class: "btn-tiny btn js-toggle-button", title: 'Edit domain info' do
      %i.icon-edit
    = link_to admin_settings_email_domain_path(domain), data: { confirm: 'Are you shure?' }, method: :delete, class: "btn-tiny btn btn-remove", title: 'Remove domain from white list' do
      %i.icon-minus.icon-white

  .edit-member.hide.js-toggle-content.col-sm-12
    = form_for domain, url: admin_settings_email_domain_path(domain), method: :put, html: { class: 'form-horizontal' } do |f|
      %div.form-holder
        .form-group
          = f.label :domain, "Domain address", class: 'control-label'
          .col-sm-10= f.text_field :domain, class: "form-control left"

        .form-group
          = f.label :description, "Domain description", class: 'control-label'
          .col-sm-10= f.text_field :description, class: "form-control left"

        .form-actions
          = f.submit 'Save', class: 'btn btn-save'
