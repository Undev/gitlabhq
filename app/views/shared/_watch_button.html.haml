%span.pull-right
  - if @current_user.present?
    %a.btn.btn-small.watch-button.has_bottom_tooltip{class: watched_class(@current_user, current_entity), role: 'button', 'data-original-title' => watched_title(@current_user, current_entity), 'data-entity-id' => current_entity.id, 'data-entity-type' => current_entity.class.model_name.to_s.underscore }
      - if current_entity.watched_by? @current_user
        %i.icon-eye-open
        %span
          Unwatch
      - else
        %i.icon-eye-close
        %span
          Watch
